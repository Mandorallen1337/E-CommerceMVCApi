@model E_CommerceMVCApi.Models.Entities.Order

<h1>Add Order</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">OrderID</label>
        <input type="text" class="form-control" asp-for="OrderId" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Total Price</label>
        <input type="text" class="form-control" asp-for="TotalPrice" readonly />
    </div>

    

    <div class="mt-3">
        <button class="btn btn-primary">Save</button>
    </div>
</form>