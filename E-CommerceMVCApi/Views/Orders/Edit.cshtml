@{
}

@model E_CommerceMVCApi.Models.Entities.Order

<h1>Edit Order</h1>

@if (Model is null)
{
    <p>Order not found with this id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="number" class="form-control" asp-for="OrderId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Total Price</label>
            <input type="number" class="form-control" asp-for="TotalPrice" />
        </div>                

        <div class="mt-3">
            <button class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3"
                    asp-action="Delete"
                    asp-controller="Orders">
                Delete
            </button>
        </div>
    </form>
}