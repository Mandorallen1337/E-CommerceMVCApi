@{
}

@model List<E_CommerceMVCApi.Models.Entities.Order>

<h1>View Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>OrderId</th>
            <th>TotalPrice</th>  
            <th>OrderDate</th>
            <th>User</th>                     
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.TotalPrice</td> 
                <td>@order.OrderDate</td>
                <td>@(order.User != null ? order.User.UserId : "User not set")</td>
            </tr>
        }
        
    </tbody>
</table>
