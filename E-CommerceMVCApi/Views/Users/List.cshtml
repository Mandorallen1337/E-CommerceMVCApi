@{
}

@model List<E_CommerceMVCApi.Models.Entities.User>


<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>UserId</th>
            <th>Username</th>
            <th>Email</th>
            <th>Password</th>
            <th></th>                       
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>           
                <td>@user.UserId</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Password</td>
                <td>
                    <a class="btn btn-primary mt-2 " asp-controller="Users" asp-action="Edit" asp-route-id="@user.UserId">Edit</a>
                </td>                              
            </tr>
        }
        <a class="btn btn-primary mt-2" asp-controller="Users" asp-action="Add">Add</a>
</table>
